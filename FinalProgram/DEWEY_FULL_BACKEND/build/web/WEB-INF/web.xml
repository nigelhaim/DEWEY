        <servlet-name>login</servlet-name>
        <servlet-class>controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>controller.Checkout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Get_ORDERS</servlet-name>
        <servlet-class>views.Get_Orders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Returned_Delete_Servlet</servlet-name>
        <servlet-class>controller.Returned_Delete_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>views.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User_Home</servlet-name>
        <servlet-class>views.User_Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit_Collections</servlet-name>
        <url-pattern>/Edit_Collections</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Get_Books</servlet-name>
        <url-pattern>/Get_Books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Go_To_Collections</servlet-name>
        <url-pattern>/Go_To_Collections</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>java</servlet-name>
        <url-pattern>/java</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenderImage</servlet-name>
        <url-pattern>/RenderImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
