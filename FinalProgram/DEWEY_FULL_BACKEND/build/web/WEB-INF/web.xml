<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>jdbcClassName</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>dbUserName</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcDriverURL</param-name>
        <param-value>jdbc:mysql</param-value>
    </context-param>
    <context-param>
        <param-name>dbHostName</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>dbPort</param-name>
        <param-value>3306</param-value>
    </context-param>
    <context-param>
        <param-name>databaseName</param-name>
        <param-value>dewey?useSSL=false</param-value>
    </context-param>
    <servlet>
        <servlet-name>Edit_Collections</servlet-name>
        <servlet-class>controller.Edit_Collections</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Get_Books</servlet-name>
        <servlet-class>views.Get_Books</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Go_To_Collections</servlet-name>
        <servlet-class>views.Go_To_Collections</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>java</servlet-name>
        <servlet-class>RenderImage.java</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenderImage</servlet-name>
        <servlet-class>controller.RenderImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Edit_Book_Details</servlet-name>
        <servlet-class>controller.Edit_Book_Details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>List_Discover</servlet-name>
        <servlet-class>controller.List_Discover</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Borrow_Books_Categories</servlet-name>
        <servlet-class>views.Borrow_Books_Categories</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_to_cart</servlet-name>
        <servlet-class>controller.add_to_cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>View_cart</servlet-name>
        <servlet-class>views.View_cart</servlet-class>
    </servlet>
